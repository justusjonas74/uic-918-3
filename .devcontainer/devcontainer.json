{
    "name": "Node.js with asn1c and Emscripten",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20-ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/nix:1": {
            "version": "nix-2.18"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-typescript-next",
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "forwardPorts": [
        3000,
        8000,
        8080
    ]
}
