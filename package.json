{
  "name": "uic-918-3",
  "version": "1.2.0",
  "description": "Package for decoding and parsing barcodes according to UIC-918.3 specification, which are used commonly on public transport online tickets.",
  "main": "./build/index.js",
  "type": "module",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js"
    }
  },
  "bin": {
    "uic918": "./build/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp postinstall",
    "test": "vitest run unit --config __tests__/vitest.config.ts",
    "test:coverage": "vitest run unit --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "test:watch": "vitest unit",
    "postinstall": "node postinstall/updateCerts.js",
    "build": "tsc -p tsconfig.json",
    "build:postinstall": "tsc -p tsconfig.postinstall.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run lint && npm run clean && tsc -p tsconfig.release.json && npm run build:postinstall",
    "build:uflex-wasm": "bash ./native/u_flex/build-wasm.sh",
    "prepublishOnly": "npm run build:release && npm run build:uflex-wasm",
    "lint": "eslint .",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "files": [
    "build",
    "wasm",
    "native/u_flex"
  ],
  "author": "Francis Doege",
  "contributors": [
    {
      "name": "Arne Breitsprecher",
      "url": "https://github.com/arnebr"
    },
    {
      "name": "Ulf Winkelvos",
      "url": "https://github.com/uwinkelvos"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "axios": "^1.6.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "jsrsasign": "^11.0.0",
    "lodash": "^4.17.11",
    "treeify": "^1.1.0",
    "tslib": "^2.6.2",
    "xml2js": "^0.6.2",
    "zxing-wasm": "^2.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/jsrsasign": "^10.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^24.1.0",
    "@types/randomstring": "^1.1.11",
    "@types/treeify": "^1.0.3",
    "@types/xml2js": "^0.4.14",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.3.0",
    "prettier": "^3.2.5",
    "randomstring": "^1.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justusjonas74/uic-918-3.git"
  },
  "keywords": [
    "uic-918-3",
    "online-ticket",
    "deutsche-bahn",
    "barcode",
    "aztec"
  ],
  "bugs": {
    "url": "https://github.com/justusjonas74/uic-918-3/issues"
  },
  "homepage": "https://github.com/justusjonas74/uic-918-3#readme"
}
